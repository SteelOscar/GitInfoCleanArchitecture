<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/gray2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/fullNameStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="17sp"/>

        <RelativeLayout
            android:id="@+id/statusStarContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fullNameStar"
            android:layout_toEndOf="@id/fullNameStar"
            android:layout_alignTop="@id/fullNameStar"
            android:background="@drawable/button_shape">

            <TextView
                android:id="@+id/statusStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:textSize="12sp" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/mainInfoRepo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/fullNameStar"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/starCntStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_star_yellow_20dp"
                android:drawableStart="@drawable/ic_star_yellow_20dp"/>

            <TextView
                android:id="@+id/watchersCntStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_remove_red_eye_white_20dp"
                android:drawableStart="@drawable/ic_remove_red_eye_white_20dp"/>

            <TextView
                android:id="@+id/languageStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_language_white_20dp"
                android:drawableStart="@drawable/ic_language_white_20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dateStarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/mainInfoRepo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/createStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_create_white_20dp"
                android:drawableStart="@drawable/ic_create_white_20dp"/>

            <TextView
                android:id="@+id/updateStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_update_white_20dp"
                android:drawableStart="@drawable/ic_update_white_20dp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/additionalInfoOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/dateStarContainer"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sizeStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/descriptionStarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/additionalInfoOverview"
            android:orientation="vertical">

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lite_gray"/>

            <TextView
                android:id="@+id/descriptionStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>